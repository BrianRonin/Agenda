<%- include('./includes/head')%>
<%- include('./includes/navbar.ejs') %>

<div class="row w-100 m-0">
  <div class="col my-3">
    <h1 class="text-center">Crie seu contato</h1>
    <%- include('./includes/messages.ejs')%>

  </div>
</div>
<% if(contato){ %>
<form action="/contato/update/<%=contato._id%>" method="post">
  <% } %>
  <form action="/contato/register" method="post">
    <input type="hidden" name="_csrf" value="<%- csrfToken %>">
    <div class="form-group">
      <label for="exampleInputEmail1">Nome</label>
      <input <% if(contato){ %> value="<%= contato.nome %>" <% } %> type="text" name="nome" class="form-control"
        id="exampleInputEmail1" aria-describedby="emailHelp">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Email</label>
      <input <% if(contato){ %> value="<%= contato.email %>" <% } %> type="email" class="form-control" name="email"
        id="exampleInputPassword1">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Telefone</label>
      <input <% if(contato){ %> value="<%= contato.telefone %>" <% } %> type="text" class="form-control" name="telefone"
        id="exampleInputPassword1">
    </div>
    <button type="submit" class="btn btn-dark">Cadastrar</button>
  </form>

  <%- include('./includes/footer') %>
  <link rel="stylesheet" href="/assets/css/contato.css">